<%= form_with(model: restaurant, local: true) do |form| %>
  <% if restaurant.errors.any? %>
    <div id="error_explanation" class="form-inline">
      <h2><%= pluralize(restaurant.errors.count, "error") %> prohibited this restaurant from being saved:</h2>

      <ul>
      <% restaurant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-inline row">
    <%= form.label :name, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :name, require: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-inline row">
    <%= form.label :address, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :address, class: "form-control" %>
    </div>
  </div>

  <div class="form-inline row">
    <div class="form-check form-check-inline">
      Halal Tips:
      <%= form.collection_check_boxes :tag_ids, Tag.all, :id, :name, {}, {multiple: true, class: "form-check-input"} do |check| %>
        <%= check.label(class: "form-check-label") { check.check_box(class: "form-check-input") + check.text} %>
      <% end %>
    </div>
  </div>

  <div class="form-inline row">
    <%= form.label :intro, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_area :intro, class: "form-control" %>
    </div>
  </div>

  <div class="form-inline row">
    <%= form.label :photo, "Photo", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= image_tag @restaurant.photo.url, width: '300px' if @restaurant.photo? %>
      <br>
      <%= form.file_field :photo, class: "form-control" %>
    </div>
  </div>

  <div class="form-inline row">
    <%= form.label :open_hour, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.time_select :open_hour, {minute_step: 15, prompt: {hour: 'Choose hour', minute: 'Choose minute'}}, class: "form-control" %>
    </div>
  </div>

  <div class="form-inline row">
    <%= form.label :close_hour, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.time_select :close_hour, {minute_step: 15, prompt: {hour: 'Choose hour', minute: 'Choose minute'}}, class: "form-control" %>
    </div>
  </div>

  <div class="form-inline row">
    <%= form.label :tel, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :tel, class: "form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-outline-success" %>
  </div>
<% end %>

<br />
<div class="rest-main row">
  <div class="rest-img col-md-7">
    <div id="carouselExampleIndicators" class="carousel slide carousel-fade" data-ride="carousel">

      <div class="carousel-inner" style="background-color: lightgray">
        <div class="carousel-item active">
          <%#= link_to event_path(feature) do%>
            <%= image_tag @restaurant.photo.url, alt:@restaurant.name %>
          <%# end %>
        </div>
        <% if !@meals.empty?%>
          <% @meals.each do |meal| %>
            <div class="carousel-item text-center">
              <%#= link_to event_path(feature) do%>
                <%= image_tag meal.photo.url, alt:meal.name %>
              <%# end %>
            </div>
          <% end %>
        <% end %>
      </div>

      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>

      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>

  <div class="rest-info col-md-5">
    <div class="card card-inverse card-success">
      <h4 class="card-title">Special title treatment</h4>
      <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
      <a href="#" class="btn btn-primary text-right">Go somewhere</a>
    </div>
  </div>
  
</div>

<br />

<div class="blog-card">
    <div class="photo photo1"></div>
    <ul class="details">
        <li class="author"><a href="#"><%= @restaurant.address %></a></li>
        <li class="date"><%= @restaurant.tel %></li>
        <li class="date"><%= @restaurant.open_hour %></li>
        <li class="tags">
            <ul>
                <li><a href="#">Muslim Boss</a></li>
                <li><a href="#">Sea Food</a></li>
                <li><a href="#">Halal</a></li>
            </ul>
        </li>
    </ul>
    <div class="description">
        <h1><%= @restaurant.name %></h1>
        <h2>Opening a door to the future</h2>
        <p class="summary"><%= @restaurant.intro %></p>
        <a href="#">Take a picture</a>
    </div>
</div>



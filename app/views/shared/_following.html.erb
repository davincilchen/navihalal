<h4>
  <% if user == current_user %>
    <%=link_to user.name    , users_path(user), class:"text-success" %>
  <% else %>
    <% if current_user.following?(user) %>
      <span><i class="fa fa-star fa-1x text-danger" ></i></span>
    <% end %>
    <%=link_to user.name    , users_path(user), class:"text-success" %>
    <span>
      <% if current_user.following?(user) %>
        <%= link_to followship_path(user), method: :delete do %>
          <span class="text-success">      ..<span>
          <i class="fa fa-eye-slash fa-1x text-success" ></i>
        <% end %>
      <% else %>
        <%= link_to followships_path(following_id: user), method: :post do %>
          <span class="text-success">      ..<span>
          <i class="fa fa-eye fa-1x text-success" ></i>
        <% end %>
      <% end %>
    </span>
  <% end %>
</h4>
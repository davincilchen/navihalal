<!DOCTYPE html>
<html>
  <head>
    <title>Halal</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">
    
    <script src="//code.jquery.com/jquery-1.11.2.min.js"></script>
    
    <%# google map setting %>
    <script src="//maps.google.com/maps/api/js?v=3.23&key=AIzaSyCqt15ZiOseuuxQWksRFRCZuDnOOKCvzcY"></script>
    <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
    <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script>
    <!-- only if you need custom infoboxes -->

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- 套用Bootstrap 4的navbar -->
    <nav class="navbar navbar-expand-lg navbar-light sticky-top" style="background-color: #77FFCC;">
      <p class="sidebar-button">
        <button type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
          <span class="navbar-toggler-icon"></span>
        </button>
      </p>
      <% if @page == "index" %>
        <%= form_with url: search_path, local: true, method: :get, html: { class: "form-inline" } do |form| %>
          <%= form.text_field :q, placeholder: "🔍 Keyword eg: seafood", data: { behavior: "autocomplete" }, class: "form-control" %>
        <% end %>
      <% else %>
        <a class="navbar-brand text-success" href="<%= root_path %>">NaviHalal</a>
      <% end %>

      <!--  ============================================= -->
      <span class="fa-stack"> <!-- ok part -->
        <!-- The icon that will wrap the number -->
        <span class="fa fa-bell fa-stack-2x text-success" style="font-size:280%;"></span>
        <!-- a strong element with the custom content, in this case a number -->
        <i class="fa fa-circle fa-stack-1x text-danger" style="font-size:140%;"></i>
        <i class="fa fa-inverse fa-stack-1x" style="font-size:70%;">100</i>
      </span>

      
      <!-- Create an icon wrapped by the fa-stack class -->
      <span class="fa-stack">
          <!-- The icon that will wrap the number -->
          <span class="fa fa-bell fa-stack-2x text-success" style="font-size:250%;"></span>
          <!-- a strong element with the custom content, in this case a number -->
          <strong class="fa-stack-1x text-danger" style="font-size:80%;">
              25%
          </strong>
      </span>

      <span class="fa-stack">
          <!-- The icon that will wrap the number -->
          <span class="fa fa-bell fa-stack-2x text-success" style="font-size:250%;"></span>
          <!-- a strong element with the custom content, in this case a number -->
          <span class="fa fa-circle fa-stack-1x"></span>
          <strong class="fa-layers-counter fa-stack-1x text-danger" style="font-size:80%;">
              1,419
          </strong>
      </span>

      <span class="fa-stack">
        <i class="fa fa-circle fa-stack-1x text-danger" style="font-size:140%;"></i>
        <i class="fa fa-inverse fa-stack-1x" style="font-size:70%;">100</i>
      </span>
      <!--  ============================================= -->
    </nav>
    <div class="sidebar collapse" id="collapseExample">
      <div class="card card-body">
        <% if current_user %>
          <div class="user-profile">
            <div class="user-avatar">
              <%= link_to user_path(current_user) do %>
                <div class="avatar-navi">
                  <%= image_tag current_user.photo.url, class: "img-fluid rounded-circle" %>
                </div>
                <div class="user-name">
                  <span><i class="fas fa-angle-right"></i></span>
                  <p><%= current_user.name %></p>
                  <p>Tap to view profile</p>
                </div>
              <% end %>
            </div>
          </div>
          <div class="user-widgit">
            <ul class="navbar-nav ml-auto">
              <li>
                <%= link_to root_path do %>
                  <span><i class="fas fa-user-friends"></i></span>Friends
                <% end %>
              </li>
              <li>
                <%= link_to root_path do %>
                  <span><i class="fas fa-heart"></i></span>Favorites
                <% end %>
              </li>
              <li>
                <%= link_to collection_user_path(current_user) do %>
                  <span><i class="fas fa-truck-loading"></i></span>Collection
                <% end %>
              </li>
              <li>
                <%= link_to root_path do %>
                  <span><i class="fas fa-paper-plane"></i></span>Suggestion
                <% end %>
              </li>
            </ul>
          </div>
        <% end %>
          <div class="user-control">
            <ul class="navbar-nav ml-auto">
              <% if current_user %>
                <li><%= link_to 'Add Restaurant', new_restaurant_path, class: "nav-link" %></li>
                <li><%= link_to '修改密碼', edit_user_registration_path, class: "nav-link" %></li>
                <% if current_user.admin? %>
                  <li><%= link_to 'Admin', admin_users_path, class: "nav-link" %></li>
                <% end %>
                <li><%= link_to '登出', destroy_user_session_path, method: :delete, class: "nav-link" %></li>
              <% else %>
                <li>
                  <%= link_to new_user_session_path do %>
                    <span><i class="fas fa-sign-in-alt fa-3x"></i></span>登入
                  <% end %>
                </li>
                <li>
                  <%= link_to user_facebook_omniauth_authorize_path do %>
                    <span><i class="fas fa-sign-in-alt fa-3x"></i></span>Sign in with Faceboo
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
      </div>
    </div>

    

    <% if flash[:notice] %>
      <div class="alert alert-success alert-dismissible fade show" role="alert"><%= notice %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% elsif flash[:alert] %>
      <div class="alert alert-danger"><%= alert %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% end %>
    
    <%= yield %>
  </body>
</html>

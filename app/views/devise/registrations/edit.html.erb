<div class="container user-edit-container">
  <div class="row">
    <div class="col-12">
      <ul class="nav nav-tabs">
        <li class="nav-item">
          <%= link_to "Profile", edit_user_path(@user), class: "nav-link" %>
        </li>
        <li class="nav-item">
          <a class="nav-link active">Password</a>
        </li>
      </ul>
    </div>
  </div>
  <div class="row user-edit">
    <div class="col-12">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>

        <div class="row">
          <div class="col-md-12">
            <div class="form-group row">
              <%= f.label :current_password, class: "col-sm-12 col-form-label" %>
              <div class="col-sm-12">
                <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
              </div>
            </div>
          </div>
          <div class="col-md-12">
            <div class="form-group row">
              <%= f.label :password, 'New Password', class: "col-sm-12 col-form-label" %>
              <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
              <% if @minimum_password_length %>
                <em><%= @minimum_password_length %> characters minimum</em>
              <% end %>
            </div>
          </div>
          <div class="col-md-12">
            <div class="form-group row">
              <%= f.label :password_confirmation, 'Confirm New Password', class: "col-sm-12 col-form-label" %>
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
            </div>
          </div>
          <div class="col-md-12 user-edit-submit">
            <div class="actions">
              <%= f.submit "Change", class: "btn btn-outline-success" %>
            </div>
          </div>
        </div>
      <% end %>

      <%= link_to "Back", :back, class: "btn btn-outline-primary" %>
    </div>
  </div>
</div>
<div class="container">
  <div id="login">
    <div id="email-login">
      <h5>Sign up</h5>
      <br>
      <div class="email-login">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class="field form-group row">
            <%= f.label :email, "Email", class: "col-sm-3 col-form-label" %><br />
            <div class="col-sm-9">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>
          </div>

          <div class="field form-group row">
            <%= f.label :password, "Password", class: "col-sm-3 col-form-label" %><br />
            <div class="col-sm-9">
              <%= f.password_field :password, autocomplete: "off",
              placeholder: "#{@minimum_password_length} characters minimum", class: "form-control" %>
            </div>
          </div>

          <div class="field form-group row">
            <%= f.label :password_confirmation, "Password confirmation", class: "col-sm-3 col-form-label" %><br />
            <div class="col-sm-9">
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
            </div>
          </div>

          <div class="field form-group">
            <div class="actions">
              <%= f.submit "Sign up", class: "btn btn-secondary sign-up" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
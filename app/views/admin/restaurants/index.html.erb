<h1>後台</h1>

<div>
  <%= link_to 'Tags', admin_tags_path %>
  |
  <%= link_to 'Restaurants', admin_restaurants_path %>
  |
  <%= link_to 'Users', admin_users_path %>
</div>

<div class="row">
  <div class="col-md-12">
    <br>
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Intro</th>
          <th>Photo</th>
          <th>Open</th>
          <th>Close</th>
          <th>Provider</th>
          <th>Address</th>
          <th>Tel</th>
          <th>lat</th>
          <th>lon</th>
          <th>Rest</th>
          <th>Business_hour</th>
        </tr>
      </thead>

      <tbody>
        <% @restaurants.each do |restaurant| %>
          <tr>
            <%#= link_to restaurant_path(restaurant) do %>
              <td><%= restaurant.name %></td>
              <td><%= restaurant.intro %></td>              
              <td>
                <%= link_to(restaurant_path(restaurant)) do %>
                  <div class="avatar-navi">
                    <%= image_tag restaurant.photo.url, class: "img-fluid rounded" %>
                  </div>
                <% end %>
              </td>
              <td><%= restaurant.open_hour %></td>
              <td><%= restaurant.close_hour %></td>
              <td><%= "admin" %></td>
              <td><%= restaurant.address %></td>
              <td><%= restaurant.tel %></td>
              <td><%= restaurant.latitude %></td>
              <td><%= restaurant.longitude %></td>
              <td><%= restaurant.rest_day %></td>
              <td><%= restaurant.business_hour %></td>
            <%# end %>
              <td><%#= form_for [:admin, restaurant] do |f| %>
                <%#= f.select(:role, [['Admin', 'admin'], ['Normal', 'normal']], {prompt: true}) %>
                <%#= f.submit %>
              <%# end %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="text-center">
      <%#= paginate @restaurants %>
    </div>
  </div>
</div>

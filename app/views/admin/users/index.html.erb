<div class="container mobile-container">
  <h1>後台</h1>

  <div>
    <%= link_to 'Tags', admin_tags_path %>
    |
    <%= link_to 'Restaurants', admin_restaurants_path %>
    |
    <%= link_to 'Users', admin_users_path %>
  </div>

  <div class="row">
    <div class="col-md-12 col-xs-12">
      <br>
      <table class="table table-striped table-bordered table-hover rwd-table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Photo</th>
            <th>Email</th>
            <th>Role</th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <%= link_to user_path(user) do %>
                <td data-th="Name">
                  <p class="user-detail"><%= user.name %></p>
                </td>
                <td data-th="Photo">
                  <%= link_to(user_path(user)) do %>
                    <div class="avatar-navi">
                      <%= image_tag user.photo.url, class: "img-fluid rounded" %>
                    </div>
                  <% end %>
                </td>
                <td data-th="E-mail">
                  <p class="user-detail"><%= user.email %></p>
                </td>
              <% end %>
                <td data-th="Role">
                  <%= form_for [:admin, user] do |f| %>
                    <%= f.select(:role, [['Admin', 'admin'], ['Normal', 'normal']], {prompt: true}) %>
                    <%= f.submit %>
                  <% end %>
                </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <!-- <div class="text-center">
        <%#= paginate @users %>
      </div> -->
    </div>
  </div>
</div>